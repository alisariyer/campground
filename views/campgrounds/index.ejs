<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs', { title: 'Campgrounds' }) %>

    <body class="d-flex flex-column min-vh-100">
        <%- include('../partials/navbar.ejs') %>
        <main class="container mt-5">
            <h1>All Campgrounds</h1>
            <%- include('../partials/flash') %>
            <div>
                <a href="/campgrounds/new">Add a new campground</a>
            </div>
            <% for (let campground of campgrounds) { %>
                <div class="card mt-2">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="<%= campground.images[0].url %>" class="card-img-top" alt="Campground image" height="300">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= campground.title %></h5>
                                <p class="card-text"><%=campground.description %></p>
                                <p class="card-text">
                                    <small class="text-muted"><%= campground.location %></small>
                                </p>
                                <a href="/campgrounds/<%= campground.id %>" class="btn btn-primary">View <% campground.title %></a>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </main>
        <%- include('../partials/footer.ejs') %>
    </body>

</html>