<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs', { title: 'Show' }) %>

    <body class="d-flex flex-column min-vh-100">
        <%- include('../partials/navbar.ejs') %>
        <div class="container my-5">
            <div class="row">
                <div class="col-6 offset-3">
                    <div class="card">
                        <img src="<%= campground.image %>" class="card-img-top" alt="..." height="300">
                        <div class="card-body">
                          <h5 class="card-title"><%= campground.title %></h5>
                          <p class="card-text"><%= campground.description %></p>
                        </div>
                        <ul class="list-group list-group-flush">
                          <li class="list-group-item text-muted"><%= campground.location %></li>
                          <li class="list-group-item">$<%= campground.price %> / night</li>
                        </ul>
                        <div class="card-body d-flex">
                            <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-warning me-2">Edit</a>
                            <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                            <a href="/campgrounds" class="ms-auto btn btn-primary">All</a>
                        </div>
                        <div class="card-footer text-muted">2 days ago</div>
                      </div>    
                </div>
                <form  class="col-6 offset-3 mt-3" action="/campgrounds/<%= campground._id %>/reviews" method="POST">
                    <h2 class="display-6">Leave a Review</h2>
                    <div class="my-0">
                        <label class="form-label" for="rating">Rating</label>
                        <input class="form-range" type="range" name="review[rating]" id="rating" min="1" max="5" value="5">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="body">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
                    </div>
                    <button class="btn btn-success ms-auto">Submit</button>
                </form>
            </div>

        </div>
        <%- include('../partials/footer.ejs') %>

    </body>

</html>